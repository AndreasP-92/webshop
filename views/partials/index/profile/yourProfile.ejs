<div class="col-md-12 profileInfo">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <h4>Your Profile</h4>
                        <hr>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
<!-- PROFIEL SETTINGS FORM ----------- -->
                        <form action="/JSON/post/profileinfo" method="POST">
                            

                          
<!-- USERNAME ----------- -->
                          <div class="form-group row">
                            <label for="username" class="col-4 col-form-label">User Name</label> 
                            <div class="col-8">
                              <input id="username" name="username" value="<%= user.profile_username %>" class="form-control here" required="required" type="text">
                            </div>
                          </div>
<!-- FIRST NAME ----------- -->
                          <div class="form-group row">
                            <label for="name" class="col-4 col-form-label">First Name</label> 
                            <div class="col-8">
                              <input id="name" name="name" value="<%= user.profile_firstname %>" class="form-control here" required="required"  type="text">
                            </div>
                          </div>
<!-- LAST NAME ----------- -->
                          <div class="form-group row">
                            <label for="lastname" class="col-4 col-form-label">Last Name</label> 
                            <div class="col-8">
                              <input id="lastname" name="lastname" value="<%= user.profile_lastname %>" class="form-control here" required="required" type="text">
                            </div>
                          </div>
<!-- EMAIL ----------- -->
                          <div class="form-group row">
                            <label for="email" class="col-4 col-form-label">Email</label> 
                            <div class="col-8">
                              <input id="email" name="email" value="<%= user.profile_mail %>" class="form-control here" required="required" type="text">
                            </div>
                          </div>
                          <div class="form-group row">
                              <div class="offset-4 col-8">
                                <button name="submit" type="submit" class="btn btn-primary">Update My Profile</button>
                              </div>
                            </div>
                        </form>
<!-- PASSWORD FORM ----------- -->
                        <form action="/JSON/post/profilepassword" method="POST" id="passForm">
                          <div class="form-group row">
                            <label for="newpass" class="col-4 col-form-label">New Password</label> 
                            <div class="col-8">
                              <input id="pass1" name="password" placeholder="New Password" class="form-control here" type="password">
                            </div>
                          </div> 
                          <div class="form-group row">
                            <label for="newpass" class="col-4 col-form-label">Repeat Password</label> 
                            <div class="col-8">
                              <input id="pass2" name="" placeholder="Repeat Password" class="form-control here" type="password">
<!-- PASSWORD VALIDATE ----------- -->
                              <div id="passwordValid" style="color:red;"></div>
                            </div>
                          </div> 
                          <div class="form-group row">
                            <div class="offset-4 col-8">
                              <button name="submitButton" type="submit" id="submitButton" class="btn btn-primary">Update My Password</button>
                            </div>
                          </div>
                        </form>
                    </div>
                </div>
                
            </div>
        </div>

        <script src="/resources/js/jsClient/profile/profileSettings.js"></script>